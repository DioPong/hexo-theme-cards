.content-card
    background-color var(--bg-content-color)
    max-width var(--content-width)
    margin 0 auto
    transition background-color .6s
    padding var(--space)
    border-radius $radius_main
    -webkit-box-shadow var(--mimicry)
    box-shadow var(--mimicry)

    &>:first-child
        margin-top 0

    &>:last-child
        margin-bottom 0

.MathJax
    overflow-x auto
    overflow-y hidden

